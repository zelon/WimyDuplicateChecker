<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WimyDuplicateChecker"
        xmlns:Windows="clr-namespace:WimyDuplicateChecker.Windows" x:Class="WimyDuplicateChecker.DetailWindow"
        mc:Ignorable="d"
        Title="DetailWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="100" />
            <ColumnDefinition Width="1*" MinWidth="100" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Windows:DetailUserControl x:Name="_leftDetail"/>
        </Grid>
        <Grid Grid.Column="1">
            <Windows:DetailUserControl x:Name="_rightDetail"/>
        </Grid>
    </Grid>
</Window>
