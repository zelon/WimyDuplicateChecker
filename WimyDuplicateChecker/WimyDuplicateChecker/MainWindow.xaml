<Window x:Class="WimyDuplicateChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WimyDuplicateChecker" Height="501" Width="525">
    <Grid>
        <ListBox x:Name="directories_" VerticalAlignment="Top" Height="127" Drop="OnDropDirectory" Margin="10,10,93,0"/>
        <Button Content="Browse..." HorizontalAlignment="Right" VerticalAlignment="Top" Width="78" Height="83" Click="OnBrowse" Margin="0,10,10,0"/>
        <Button Content="Remove" HorizontalAlignment="Right" Margin="0,98,10,0" VerticalAlignment="Top" Width="78" Height="39"/>
        <Button x:Name="start_button_" Content="Start" Margin="0,173,0,0" VerticalAlignment="Top" Height="81" Click="OnStart"/>
        <TextBox x:Name="log_" Margin="0,259,0,27" TextWrapping="Wrap" Text="Drag a directory above or press Browse button" VerticalScrollBarVisibility="Auto"/>
        <StatusBar Height="27" VerticalAlignment="Bottom">
            <StatusBarItem x:Name="status_bar_" Content="Ready"/>
        </StatusBar>
        <TextBox x:Name="filesize_" HorizontalAlignment="Left" Height="23" Margin="304,142,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="57" TextAlignment="Right"/>
        <Label Content="MB 이상 파일만 체크" HorizontalAlignment="Left" Margin="366,142,0,0" VerticalAlignment="Top" Width="141"/>
        <TextBox x:Name="search_pattern_" HorizontalAlignment="Left" Height="23" Margin="10,142,0,0" TextWrapping="Wrap" Text="*.*" VerticalAlignment="Top" Width="120"/>
        <Label Content="파일 패턴만 체크" HorizontalAlignment="Left" Margin="135,142,0,0" VerticalAlignment="Top" Width="141"/>
    </Grid>
</Window>
