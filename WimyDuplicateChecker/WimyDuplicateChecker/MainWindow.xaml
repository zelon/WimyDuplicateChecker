<Window x:Class="WimyDuplicateChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="501" Width="525">
  <Grid>
    <ListBox x:Name="directories_" VerticalAlignment="Top" Height="137" Drop="OnDropDirectory" Margin="0,0,93,0"/>
    <Button Content="Browse..." HorizontalAlignment="Right" VerticalAlignment="Top" Width="88" Height="93" Click="OnBrowse"/>
    <Button Content="Remove" HorizontalAlignment="Right" Margin="0,98,0,0" VerticalAlignment="Top" Width="88" Height="39"/>
    <Button x:Name="start_button_" Content="Start" Margin="0,173,0,0" VerticalAlignment="Top" Height="33" Click="OnStart"/>
    <TextBox x:Name="log_" Margin="0,211,0,27" TextWrapping="Wrap" Text="Drag a directory above or press Browse button" VerticalScrollBarVisibility="Auto"/>
    <StatusBar Height="27" VerticalAlignment="Bottom">
      <StatusBarItem x:Name="status_bar_" Content="Ready"/>
    </StatusBar>
    <TextBox x:Name="filesize_" HorizontalAlignment="Left" Height="23" Margin="183,142,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="57" TextAlignment="Right"/>
    <Label Content="MB" HorizontalAlignment="Left" Margin="245,142,0,0" VerticalAlignment="Top"/>
    <TextBox x:Name="search_pattern_" HorizontalAlignment="Left" Height="23" Margin="10,142,0,0" TextWrapping="Wrap" Text="*.*" VerticalAlignment="Top" Width="120"/>
  </Grid>
</Window>
